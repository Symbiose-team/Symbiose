{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container p-3 my-3">
        <h3 align="center">Check out all your own events</h3>
        <h1 align="center">My Events</h1>
        <!--
        <a class="btn btn-primary" aria-current="page" href="/event/add">Add Event</a>
        -->

        {% if events %}
            <div class="table-responsive">
                <table id="events" class="table table-hover table-bordered table-sm table-primary border-light">
                    <thead>
                    <tr>
                        <th scope="col">Event</th>
                        <th scope="col">Supplier</th>
                        <th scope="col">Players</th>
                        <th scope="col">Remaining</th>
                        <th scope="col">Type</th>
                        <th scope="col">Date</th>
                        <th scope="col">Previs</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                        <tr>
                            <td>{{ event.name }}</td>
                            <td>{{ event.supplier }}</td>
                            <td>{{ event.NumParticipants }}</td>
                            <td>{{ event.NumRemaining }}</td>
                            <td>{{ event.type }}</td>
                            <td>{{ event.date|date }}</td>
                            <td><img src="http://localhost/pidev/logo-mrigel-sghir.jpg"
                                     class="img-fluid rounded-circle"
                                     alt=""
                                     style="border-radius: 4px;
                                             padding: 5px;
                                             width: 50px;" ></td>
                            <td>


                                <a href="/supplierevent/{{ event.id }}" class="btn btn-outline-dark">
                                    Show
                                </a>

                                <!--
                                <a href="event/edit/{{ event.id }}" class="btn btn-light">
                                    Edit
                                </a>
                                !-->

                                <!--
                                <a href="event/delete/{{ event.id }}" class="btn btn-danger">
                                    Delete
                                </a>
                                -->

                                <!--
                                <a href="#" class="btn btn-danger delete-event" data-id="{{ event.id }}">
                                    Cancel
                                </a>
                                -->
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        {% else %}
            <p>No events yet !</p>
        {% endif %}

    </div>
{% endblock %}

