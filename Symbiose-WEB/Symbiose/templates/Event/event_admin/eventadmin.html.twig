                                    <td>{{ event.name }}</td>
                                    <td>{{ event.supplier }}</td>
                                    <td>{{ event.NumParticipants }}</td>
                                    <td>{{ event.NumRemaining }}</td>
                                    <td>{{ event.type }}</td>
                                    <td>{{ event.date|date }}</td>
                                    <td><img src="http://localhost/pidev/logo-mrigel-sghir.jpg"
                                             class="img-fluid rounded-circle"
                                             alt=""
                                             style="border-radius: 4px;
                                             padding: 5px;
                                             width: 50px;" ></td>
                                    <td>
                                        <a href="/eventadmin/{{ event.id }}" class="btn btn-dark">
                                            Show
                                        </a>


                                        <a href="event/edit/{{ event.id }}" class="btn btn-light">
                                            Edit
                                        </a>


                                        <a href="event/delete/{{ event.id }}" class="btn btn-danger" onclick="return confirm('Are you sure ?')">
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <p>No events yet !</p>
                        {% endif %}

