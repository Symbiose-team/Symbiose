{% extends 'base.html.twig' %}

{% block body %}
    <style xmlns="http://www.w3.org/1999/html">
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="container p-3 my-3">
        <h1 align="center">Special events</h1>


        {% if Sevents %}
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for Sevent in Sevents %}

                    <div class="col-sm-6">
                        <div class="card text-center border border-warning  shadow-0 mb-3" >
                            <!--
                            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
                                <img
                                        src="http://localhost/pidev/logo-mrigel-sghir.jpg"
                                        class="card-img-top"
                                        style="border-radius: 4px;
                                                         padding: 5px;
                                                         width: 120px;"
                                />
                                <a href="#!">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
                                </a>
                            </div>
                            -->
                            <div class="card-header text-center">Featured</div>
                            <div class="card-body">
                                <h5 class="card-title text-center">{{ Sevent.name }}</h5>

                                {% set type = Sevent.type %}
                                {% if type == 'Tennis'  %}
                                    <span class="badge bg-success">{{ Sevent.type }}</span>

                                {% elseif type == 'Football' %}
                                    <span class="badge bg-light text-dark">{{ Sevent.type }}</span>

                                {% elseif type == 'Basketball' %}
                                    <span class="badge bg-warning text-dark">{{ Sevent.type }}</span>

                                {% elseif type == 'Paintball' %}
                                    <span class="badge bg-secondary">{{ Sevent.type }}</span>

                                {% elseif type == 'LaserTag' %}
                                    <span class="badge bg-light text-dark">{{ Sevent.type }}</span>

                                {% else %}
                                    <span class="badge rounded-pill bg-warning text-dark">{{ Sevent.type }}</span>
                                {% endif %}

                                <p class="card-text">
                                <div class="progress" style="height: 20px">
                                    <div
                                            class="progress-bar progress-bar-striped progress-bar-animated"
                                            role="progressbar"
                                            aria-valuenow="{{ Sevent.NumRemaining }}"
                                            aria-valuemin="0"
                                            aria-valuemax="{{ Sevent.NumParticipants }}"
                                            style="width: 100%">{{ Sevent.NumRemaining }} Places left</div>
                                    </div>

                                <a class="text-center">
                                    <a href="{{ path('sevent_show',{'id':Sevent.id}) }}" class="btn btn-outline-dark">Show</a>
                                </a>
                                <a class="text-center">
                                    <a href="{{ path('join_sevent',{'id':Sevent.id}) }}" class="btn btn-warning">Join This Event</a>
                                </a>
                            </div>
                            <div class="card-footer text-center">{{ Sevent.date|date }}</div>
                        </div>
                    </div>
                {% endfor %}

            </div>

        {% else %}
            <p>No special events yet !</p>
        {% endif %}

        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(Sevents) }}
        </div>

        <div class="container p-3 my-3" align="center">
            <a href="{{ path('event_list') }}" class="btn btn-dark">Go back </a>
        </div>
    </div>


    <!--
    {% block Javascripts %}
        <script
                type="text/javascript"
                src="/js/delete_event.js">
        </script>
    {% endblock %}
    -->

{% endblock %}

