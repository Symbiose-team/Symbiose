{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div>
                <div class="card text-center">
                    <h1>{{ Sevent.name }}</h1>
                    <h3>{{ Sevent.supplier }}</h3>
                    <p>Number of reservations left : {{ Sevent.NumRemaining }}</p>
                    <p>{{ Sevent.Date | date }}</p>
                    <a href="/sevents" class="btn btn-dark">Go Back</a>
                    <a href="/sevent/join/{{ Sevent.id }}" class="btn btn-warning btn-outline-dark">
                        Join This Event
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
